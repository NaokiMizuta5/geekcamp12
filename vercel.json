{
    "builds": [
      {
        "src": "server/wsgi.py",
        "use": "@vercel/python",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/wsgi.py"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }